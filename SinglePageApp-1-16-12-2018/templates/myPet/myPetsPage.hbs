{{>myPetsHeader}}
{{#if username}}
<section class="dashboard">
        <h1>My Pets</h1>

        <ul class="other-pets-list">
            {{#each pets}}
            <li class="otherPet">
                <h3>Name: {{this.name}}</h3>
                <p>Category: {{this.category}}</p>
                <p class="img"><img src={{this.imageURL}}></p>
                <p class="description">{{this.description}}</p>
                <div class="pet-info">
                    <a href="#/edit/{{this._id}}"><button class="button" >Edit</button></a>
                    <a href="#/delete/{{this._id}}"><button class="button">Delete</button></a>
                    <i class="fas fa-heart"></i> <span> {{this.likes}}</span>
                </div>
            </li>
            {{/each}}
        </ul>
    </section>
    {{else}}
    <section class="basic">
    <h1> Welcome to pet my pet!</h1>                
</section>
{{/if}}
{{>myPetsFooter}}
