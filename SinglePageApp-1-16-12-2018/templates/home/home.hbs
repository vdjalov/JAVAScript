{{>header}}
{{#if username}}
<section class="dashboard">
        <h1>Dashboard</h1>
        <nav class="navbar">
            <ul>
                <li><a href="#/category/All">All</a></li>
                <li><a href="#/category/Cat">Cats</a></li>
                <li><a href="#/category/Dog">Dogs</a></li>
                <li><a href="#/category/Parrot">Parrots</a></li>
                <li><a href="#/category/Reptile">Reptiles</a></li>
                <li><a href="#/category/Other">Other</a></li>
            </ul>
        </nav>
        <ul class="other-pets-list">
            {{#each pets}}
            <li class="otherPet">
                <h3>Name: {{this.name}}</h3>
                <p>Category: {{this.category}}</p>
                <p class="img"><img src={{this.imageURL}}></p>
                <p class="description">{{this.description}}</p>
                <div class="pet-info">
                    <a href="#/pet/{{this._id}}"><button class="button" ><i class="fas fa-heart"></i> Pet</button></a>
                    <a href="#/details/{{this._id}}"><button class="button">Details</button></a>
                    <i class="fas fa-heart"></i> <span> {{this.likes}}</span>
                </div>
            </li>
            {{/each}}
        </ul>
    </section>
    {{else}}
    <section class="basic">
    <h1> Welcome to pet my pet!</h1>                
</section>
{{/if}}
{{>footer}}